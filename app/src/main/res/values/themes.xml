<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TechnoecorpDealer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@drawable/background_gorilla</item>
        <item name="android:navigationBarColor">@color/primaryLightColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="textInputStyle">@style/MyCustomEditTextStyle</item>
        <item name="editTextStyle">
            @style/MyCustomEditTextStyle
        </item>
        <item name="android:textViewStyle">@style/TextViewNormal</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxinova</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="SplashTheme" parent="Theme.TechnoecorpDealer">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/proxinova</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MobileInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:digits">0123456789</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:maxEms">10</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AccountNumberInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:digits">0123456789</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:maxEms">18</item>
        <item name="android:maxLength">18</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="OtpInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:digits">0123456789</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:maxEms">4</item>
        <item name="android:maxLength">4</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="NameInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:digits">ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz\u0020
        </item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AddressInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CodeInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:digits">ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789-
        </item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">10</item>
        <item name="android:maxLength">10</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DOBInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:digits">0123456789/</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">10</item>
        <item name="android:maxLength">10</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EmailInputEditText" parent="MyCustomEditTextStyle">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="fontFamily">@font/proximanova_reg</item>
        <item name="android:color">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>

    </style>


    <style name="TextViewNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/proxinova</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/proxinova</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AutoCompleteTextStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/proxinova</item>
        <item name="android:inputType">none</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_stroke_text_input_black_layout</item>
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
        <item name="android:textColorHint">@color/selector_hint_text_input_black_layout</item>
    </style>

    <style name="DropDownLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/selector_stroke_text_input_black_layout</item>
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
        <item name="boxBackgroundColor">@color/selector_background_input_layout</item>
        <item name="android:textColorHint">@color/selector_hint_text_input_black_layout</item>
    </style>

</resources>